<h2>User info</h2>

<h2>Users</h2>


<% @users.each do |user| %>
<%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no-image.jpg" %>
<%= user.name %>
<%= link_to "show", user_path(user) %>
<% end %>

<h1>New Book </h1>

<%= form_with model:@book, local:true do |f| %>
  <label>Title</label>
  <%= f.text_field :title, autofocus: true %>
  <label>Opinion</label>
  <%= f.text_area :body, autofocus: true %>
<%= f.submit "Create Book" %>
<% end %>