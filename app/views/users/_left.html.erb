
<h2>User info</h2>

<%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no-image.jpg", size:"60x60" %>
<h4>name</h4>
<%= user.name %>
<h4>introduction</h4>
<%= user.introduction %>

<%= link_to "ユーザー編集", edit_user_path(user) %>

<h1>New Book </h1>

<%= form_with model:book, local:true do |f| %>
  <label>Title</label>
  <%= f.text_field :title, autofocus: true %>
  <label>Opinion</label>
  <%= f.text_area :body, autofocus: true %>
<%= f.submit "Create Book" %>
<% end %>