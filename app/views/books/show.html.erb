<h2>User info</h2>

<h2>Book detail</h2>

<%= @book.user.name %>
<%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no-image.jpg" %>

<%= @book.title %>
<%= @book.body %>

<% if @book.user.id == current_user.id %>
    <%= link_to "Edit", edit_book_path(@book) %>
<% end %>

<h1>New Book </h1>

<%= form_with model:@book, local:true do |f| %>
  <label>Title</label>
  <%= f.text_field :title, autofocus: true %>
  <label>Opinion</label>
  <%= f.text_area :body, autofocus: true %>
  <%= f.submit "Create Book" %>
<% end %>