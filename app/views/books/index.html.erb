<h2>User info</h2>

<h2>Books</h2>

<% @books.each do |book| %>
<%= link_to book_path(book) do %>
<%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no-image.jpg" %>
<% end %>

<%= link_to book_path(book) do %>
<%= book.title %>
<% end %>

<%= book.body %>

<% end %>

<h1>New Book </h1>

<%= form_with model:@book, local:true do |f| %>
  <label>Title</label>
  <%= f.text_field :title, autofocus: true %>
  <label>Opinion</label>
  <%= f.text_area :body, autofocus: true %>
<%= f.submit "Create Book" %>
<% end %>
